{
  "devDependencies": {
    "browser-sync": "^3.0.4",
    "npm-run-all": "^4.1.5",
    "tailwindcss": "^3.4.17"
  },
  "scripts": {
    "css:watch": "tailwindcss -i ./styles/input.css -o ./styles/output.css --watch",
    "css:build": "tailwindcss -i ./styles/input.css -o ./styles/output.css --minify",
    "serve": "browser-sync start --server --files \"index.html, styles/output.css, js/**/*.js\" --no-open",
    "dev": "npm-run-all --parallel css:watch serve",
    "build": "NODE_ENV=production npm run css:build"
  }
}
